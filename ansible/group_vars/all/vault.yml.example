---
# Example vault variables file
# This file shows the structure of the encrypted vault.yml
# To create your own encrypted vault.yml:
# 1. Copy this file: cp vault.yml.example vault.yml
# 2. Replace the placeholder values with your actual secrets
# 3. Encrypt the file: ansible-vault encrypt group_vars/all/vault.yml
# 4. To edit: ansible-vault edit group_vars/all/vault.yml

# K3s token - generate with: openssl rand -hex 32
vault_k3s_token: "REPLACE_WITH_ACTUAL_K3S_TOKEN"

# Tailscale authentication key for host VPN
# Get from: https://login.tailscale.com/admin/settings/keys
vault_tailscale_key: "REPLACE_WITH_ACTUAL_TAILSCALE_KEY"

# Tailscale OAuth credentials for Kubernetes operator
# Create OAuth client at: https://login.tailscale.com/admin/settings/oauth
# Required scopes: devices:read, devices:write
vault_tailscale_oauth_client_id: "REPLACE_WITH_OAUTH_CLIENT_ID"
vault_tailscale_oauth_client_secret: "REPLACE_WITH_OAUTH_CLIENT_SECRET"

# Cloudflare tunnel credentials (optional - can also be managed via SOPS)
# Create tunnel at: https://one.dash.cloudflare.com/
vault_cloudflare_tunnel_id: "REPLACE_WITH_TUNNEL_ID"
vault_cloudflare_tunnel_secret: "REPLACE_WITH_TUNNEL_SECRET"
vault_cloudflare_account_tag: "REPLACE_WITH_ACCOUNT_TAG"
