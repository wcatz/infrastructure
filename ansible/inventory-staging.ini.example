# Staging Environment Inventory
# This file demonstrates how to configure HAProxy for staging environment

[haproxy_servers]
haproxy-staging ansible_host=192.168.3.5 ansible_user=ubuntu hostname=haproxy-staging-01

[haproxy_servers:vars]
# Staging-specific HAProxy configuration
haproxy_environment=staging

# Staging Kubernetes worker nodes
haproxy_tcp_backends:
  - name: mysql
    port: 3306
    mode: tcp
    balance: leastconn
    servers:
      - name: k8s-staging-worker-1
        address: 192.168.3.11
        port: 30306
        check: true
        check_interval: 2s
        rise: 2
        fall: 3
      - name: k8s-staging-worker-2
        address: 192.168.3.12
        port: 30306
        check: true
        check_interval: 2s
        rise: 2
        fall: 3
      - name: k8s-staging-worker-3
        address: 192.168.3.13
        port: 30306
        check: true
        check_interval: 2s
        rise: 2
        fall: 3

  - name: postgresql
    port: 5432
    mode: tcp
    balance: leastconn
    servers:
      - name: k8s-staging-worker-1
        address: 192.168.3.11
        port: 30432
        check: true
        check_interval: 2s
      - name: k8s-staging-worker-2
        address: 192.168.3.12
        port: 30432
        check: true
        check_interval: 2s
      - name: k8s-staging-worker-3
        address: 192.168.3.13
        port: 30432
        check: true
        check_interval: 2s

haproxy_udp_backends:
  - name: wireguard
    port: 51820
    mode: udp
    balance: roundrobin
    servers:
      - name: k8s-staging-worker-1
        address: 192.168.3.11
        port: 31820
      - name: k8s-staging-worker-2
        address: 192.168.3.12
        port: 31820
      - name: k8s-staging-worker-3
        address: 192.168.3.13
        port: 31820

[all:vars]
ansible_python_interpreter=/usr/bin/python3
